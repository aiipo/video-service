{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "outDir": "./dist/",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "noImplicitAny": false
  },
  "include": [
    "src/"
  ],
  "exclude": [
    "node_modules/",
    "dist/"
  ]
}